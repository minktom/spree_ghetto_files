<div class="clearfix">
  <div class="left">

    <%= f.field_container :title do %>
      <%= f.label :title %> <span class="required">*</span><br />
      <%= f.text_field :title, :class => 'fullwidth title' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :attachment do %>
      <%= f.label :attachment %><br />
      <%= f.file_field :attachment %>
      <%= f.error_message_on :attachment %>
    <% end %>

  </div>
  <div class="right">

    <% for product in Spree::Product.find(:all) %>  
      <div class="product_checkbox">
        <%= check_box_tag "downloadable[product_ids][]", product.id, @downloadable.products.include?(product) %>  
        <%= product.name %>  
      </div>
    <% end %>
    
  </div>
</div>